@model IEnumerable<MVC_Hamburger.Models.Concrete.Menu>

@{
    Layout = "_AdminLayout";
}

<h1 class="bg-dark text-white m-0">Menü Listesi</h1>

<p class="bg-dark text-white m-0">
    <a asp-action="Create" class="btn btn-success ">Yeni Oluştur</a>
</p>
<table class="table table-dark table-hover m-0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResimYolu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="~/MenuResimleri/@item.ResimYolu" width="120px" height="90px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
